<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    
    <application>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>pt</supported-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
        
        <message-bundle>           
            py.com.inclass.validation.Messages
        </message-bundle>
        
        <resource-bundle>
            <base-name>py.com.inclass.bundle.base</base-name>
            <var>bBase</var>
        </resource-bundle>
                
        <resource-bundle>
            <base-name>py.com.inclass.bundle.project</base-name>
            <var>bProj</var>
        </resource-bundle>    
    </application>
    
    <lifecycle>
        <phase-listener>py.com.inclass.security.AuthorizationListener</phase-listener>
    </lifecycle> 

</faces-config>
